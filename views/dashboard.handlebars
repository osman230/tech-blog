<section>
    <h2>Create a New Post</h2>

    <form class="new-post">
        <div>
            <label for="post-title">Title:</label>
            <input type="text" id="post-title" name="post-title" />
        </div>
        <div>
            <label for="post-content">Post:</label>
            <textarea id="post-content" name="post-content"></textarea>
        </div>
        <button type="submit" class="button">Create Post</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h3>Your Posts:</h3>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-content post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit Post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}

<script src="/javascript/add-post.js"></script>